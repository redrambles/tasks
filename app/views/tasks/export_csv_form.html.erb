<h1>Export Tasks to CSV File</h1>

<%= form_tag export_csv_tasks_path(format: :csv), method: :get do %>
  <div class="border-b border-gray-900/10 pb-12">
    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-3">
        <%= label_tag 'Start Date' %>
        <div class="mt-2">
          <%= text_field_tag 'start_date', nil, type: 'date', class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#7ee47e] sm:text-sm sm:leading-6"  %>
        </div>
      </div>

      <div class="sm:col-span-3">
        <%= label_tag 'End Date' %>
        <div class="mt-2">
          <%= text_field_tag 'end_date', nil, type: 'date', class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#7ee47e] sm:text-sm sm:leading-6" %>
        </div>
      </div>
    </div>
    <%= submit_tag 'Export CSV', class: 'btn btn-success text-right block ml-auto' %>
  </div>
  <div class="mt-10">
    <%= link_to "Back to all tasks", tasks_url, class: "task-status btn btn-neutral no-underline" %>
  </div>

<% end %>


